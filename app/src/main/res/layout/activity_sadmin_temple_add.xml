<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SAdminTempleAdd"
    android:background="@drawable/muragala_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/s_admin_temple_add_hi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayubowan Dushyantha"
                android:gravity="left"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_weight="0.9"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/s_admin_temple_add_avatar"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:foregroundGravity="center"
                android:layout_weight="0.1"
                android:src="@drawable/person_t"
                tools:ignore="RtlHardcoded"
                android:contentDescription="avatar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="@string/add_wiharasthana"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_temple_name_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/register_tempe_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="         විහාරස්ථානයේ නම"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_baseline_person_outline_24"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_wiharadhipathi_himi_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/register_wiharadhipathi_himi_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="         විහාරාධිපති හිමි"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_baseline_person_outline_24"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_wiharadhikari_himi_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/register_wiharadhikari_himi_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="         විහාරාධිකාරී හිමි"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_baseline_person_outline_24"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_temple_address_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/register_temple_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="         විහාරස්ථානයේ ලිපිනය"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_baseline_edit_location_24"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_temple_email_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/register_temple_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="         Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_baseline_account_circle_24"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_temple_pw_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/register_temple_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="         Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_temple_confirm_pw_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/register_temple_confirm_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="         Confirm Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/register_tmple_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="20dp"
                android:shadowColor="@android:color/transparent"
                android:padding="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/main_orange_light_color"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>